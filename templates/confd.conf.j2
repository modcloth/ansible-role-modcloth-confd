# vim:filetype=upstart
# {{ansible_managed}}

description "Confd Service"

start on (filesystem or runlevel [2345])
stop on runlevel [!2345]

respawn
respawn limit 3 30

script
  confd -interval {{confd_interval}} -backend {{confd_backend}} \
    {% for node in confd_backend_nodes %}
    -node {{node}}
    {% endfor %}
end script
